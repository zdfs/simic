{
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": "./src",
		"paths": {
			"@tailus-ui/*": ["tailus-ui/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["vite.config.ts"]
}
